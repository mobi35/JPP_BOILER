@{
    ViewData["Title"] = "Privacy Policy";
Layout = "Backend";
}

@model IEnumerable<Feedback>
 <section id="main-content"> 
         <div class="wrapper">

               <h3><i class="fa fa-angle-right"></i> Feedbacks</h3>
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
          <div class="col-lg-12">
            <div class="form-panel">
<table class="table table-striped table-bordered responsive no-wrap" style="width:100%;margin-top:5%;" id="userList">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Date</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @{
            foreach (var feedback in Model)
            {
            <tr>
                <td>@feedback.Name</td>
                <td>@feedback.Email</td>
                <td>@feedback.Message</td>
                <td>@feedback.Sent</td>
                <td> <a onclick="return confirm('are you sure you want to delete?')" asp-route-id="@feedback.FeedbackId" asp-controller="Feedback" asp-action="Delete">Delete</a>  </td>
            </tr>
            }
        }
    </tbody>
</table>
</div>
</div>
</div>
</div>
</section>
<br /><br /><br /><br />


<script>
    $(document).ready(function () {
        $('#userList').DataTable({

            responsive: true,
            lengthChange: false,
            "sScrollX": "100%",
            "scrollCollapse": true,
            dom: 'lBfrtip',
            buttons: [
                {
                    extend: 'print',

                    customize: function (win) {
                        $(win.document.body)
                            .css({ 'font-size': '10pt' })
                            .prepend(
                                '<img style= src="~/Images/activefinancelogo.png"  style="position:absolute; height:500px; z-index:5000; width:500px; top:0; left:0;" />'
                            );

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }, 'excelHtml5', {
                    extend: 'pdf',
                    download: 'open',
                }
            ]

        });
    });

</script>
