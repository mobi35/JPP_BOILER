@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "BackEnd";
}
@model IEnumerable<Request>



<section id="main-content">
    <div class="wrapper">

        <h3><i class="fa fa-angle-right"></i>Service Requests</h3>
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">


                    <table class="table table-striped table-bordered responsive no-wrap" style="width:100%;margin-top:2%;" id="userList">
                        <thead>
                            <tr>
                                <th>Address</th>
                                <th>Problem Encountered</th>
                                <th>Price</th>
                                <th>Assigned By</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                foreach (var request in Model)
                                {
                                                        <tr>
                                                            <td>@request.Address</td>
                                                            <td>@request.Requirements</td>
                                                            <td>@request.Price</td>
                                                            <td>@request.AssignedBy</td>
                                                            <td>
                                                                @request.Status

                                                            </td>

                                                            <td>
                                                                @{ if (request.Status == "for viewing")
                                                                    {

                                                                        <button onclick="MyFunction('@request.RequestId')" class="btn btn-success btn-sm" data-toggle="modal" data-target="#myModal">
                                                                            Service Quotation
                                                                        </button>

                                                                        <a asp-controller="Request" asp-route-id="@request.RequestId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to reject this viewing?')" asp-action="RejectQuotation">Reject</a>
                                                                    }
                                                                }
                                                            </td>

                                                        </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- col-lg-12-->
        </div>



    </div>
</section>
<br />
<br />
<br />
<br />
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-controller="Request" asp-action="AcceptService" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Service Quotation</h4>
                </div>
                <div class="modal-body">
                    <h5>Service Details</h5>
                    <input type="hidden" id="requestId" name="id" class="form-control" placeholder="placeholder">
                    <input type="text" name="price" required class="form-control" placeholder="Service Price">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<script>


    function MyFunction(x) {
        $('#requestId').val(x);
    }

    $(document).ready(function () {
        $('#userList').DataTable({

            responsive: true,
            lengthChange: false,
            "sScrollX": "100%",
            "scrollCollapse": true,
            dom: 'lBfrtip',
            buttons: [
                {
                    extend: 'print',

                    customize: function (win) {
                        $(win.document.body)
                            .css({ 'font-size': '10pt' })
                            .prepend(
                                '<img style= src="~/Images/activefinancelogo.png"  style="position:absolute; height:500px; z-index:5000; width:500px; top:0; left:0;" />'
                            );

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }, 'excelHtml5', {
                    extend: 'pdf',
                    download: 'open',
                }
            ]

        });
    });

</script>
