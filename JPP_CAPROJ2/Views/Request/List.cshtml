@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "BackEnd";
}
@model IEnumerable<Request>



<section id="main-content">
    <div class="wrapper">

        <h3><i class="fa fa-angle-right"></i>Service Requests</h3>
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">


                    <table class="table table-striped table-bordered responsive no-wrap" style="width:100%;margin-top:2%;" id="userList">
                        <thead>
                            <tr>
                                <th>Address</th>
                                <th>Problem Encountered</th>
                                <th>Price</th>
                                <th>Assigned By</th>
                                <th>Status</th>
                                <th>Inspection Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                foreach (var request in Model)
                                {
                                                        <tr>
                                                            <td>@request.Address</td>
                                                            <td>@request.Requirements</td>
                                                            <td>P @request.Price.ToString("N")</td>
                                                            <td>@request.AssignedBy</td>
                                                            <td>
                                                                @request.Status
                                                            </td>
                                                            <td>
                                                                @request.AvailableDate.ToString("D")
                                                            </td>

                                                            <td>

                                                                @{
                                                                    @using Microsoft.AspNetCore.Http;
                                                                    @inject IHttpContextAccessor HttpContextAccessor
                                                                    if (Startup.IsSessionAvailable)
                                                                    {
                                                                        if (HttpContextAccessor.HttpContext.Session.GetString("Role").ToString() != "employee")
                                                                        {
                                                                            if (request.Status == "for inspection")
                                                                            {

                                                                                <button onclick="MyFunction('@request.RequestId')" class="btn btn-success btn-sm" data-toggle="modal" data-target="#myModal">
                                                                                    Service Quotation
                                                                                </button>

                                                                                <a asp-controller="Request" asp-route-id="@request.RequestId" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to reject this viewing?')" asp-action="RejectQuotation">Reject</a>
                                                                            }
                                                                        }
                                                                    }

                                                                }
                                                            </td>

                                                        </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- col-lg-12-->
        </div>



    </div>
</section>
<br />
<br />
<br />
<br />
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-controller="Request" asp-action="AcceptService" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Service Quotation</h4>
                </div>
                <div class="modal-body">
                    <h5>Service Details</h5>
                    <input type="checkbox" id="c1" value="5000" /> Boiler Maintenance
                    <input type="checkbox" id="c2" value="10000" /> Boiler Repair
                    <input type="checkbox" id="c3" value="5500" /> Cleaning
                    <input type="checkbox" id="c4" value="15000" /> Plumbing
                    <input type="checkbox" id="c5" value="12500" /> Rehabilitation
                    <input type="checkbox" id="c6" value="8500" /> Retubing
                    <input type="checkbox" id="c7" value="9000" /> Fabrication of Reactors
                    <input type="checkbox" id="c8" value="15250" /> Fully Retube
                    <input type="checkbox" id="c9" value="13275" /> Partial Retubing
                    <input type="hidden" id="requestId" name="id" class="form-control" placeholder="placeholder">
                    <input type="number" name="price" min="1" id="priceTots" readonly value="0" class="form-control" placeholder="Service Price">
                    <button id="calculate">Calculate</button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <input type="submit" onclick="return Validate()" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

