@model DashboardViewModel
@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "BackEnd";
}

<!-- Custom styles for this template -->
<link href="css/style.css" rel="stylesheet">
<link href="css/style-responsive.css" rel="stylesheet">
<script src="lib/chart-master/Chart.js"></script>


<!--sidebar end-->
<!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->
<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-9 main-chart">
                <!--CUSTOM CHART START -->
                <canvas id="myChart" width="400" height="200"></canvas>
                <!--custom chart end-->
                <div class="row mt">
                    <!-- SERVER STATUS PANELS -->
                   
                    <!-- /col-md-4-->
                   
                    <!-- /col-md-4 -->
                   
                    <!-- /col-md-4 -->
                </div>
                <!-- /row -->
              
              
                <!-- /row -->
             
                <!-- /row -->
            </div>
            <!-- /col-lg-9 END SECTION MIDDLE -->
            <!-- **********************************************************************************************************************************************************
                RIGHT SIDEBAR CONTENT
                *********************************************************************************************************************************************************** -->
            <div class="col-lg-3 ds">
                <!--COMPLETED ACTIONS DONUTS CHART-->
                <!--NEW EARNING STATS -->
                <div class="panel terques-chart">
                    <div class="panel-body">
                        <div class="chart">
                            <div class="centered">
                                <span>TODAY EARNINGS</span>
                                <strong>@Html.Raw("P")@Model.IncomeToday.ToString("N")</strong>
                            </div>
                            <br>
                            <canvas id="myLine" width="400" height="200"></canvas>
                        </div>
                    </div>
                </div>
                <!--new earning end-->
                <!-- RECENT ACTIVITIES SECTION -->
                <h4 class="centered mt">RECENT ACTIVITIES</h4>
                <!-- First Activity -->

                @{
                    foreach (var transaction in Model.NewTransactions)
                    {

                                <a asp-action="Invoice" asp-controller="Cart" asp-route-id="@transaction.TransactionKey">
                                    <div class="desc">
                                        <div class="thumb">
                                            <span class="badge bg-theme"><i class="fa fa-clock-o"></i></span>
                                        </div>
                                        <div class="details">
                                            <p>
                                                <muted>@transaction.DateTimeStamps</muted>
                                                <br />
                                                <a href="#">@transaction.UserName</a> purchased an item.<br />
                                            </p>
                                        </div>
                                    </div>
                                </a>

                    }
                }




             
                <!-- CALENDAR-->
                <div id="calendar" class="mb">
                    <div class="panel green-panel no-margin">
                        <div class="panel-body">
                            <div id="date-popover" class="popover top" style="cursor: pointer; disadding: block; margin-left: 33%; margin-top: -50px; width: 175px;">
                                <div class="arrow"></div>
                                <h3 class="popover-title" style="disadding: none;"></h3>
                                <div id="date-popover-content" class="popover-content"></div>
                            </div>
                            <div id="my-calendar"></div>
                        </div>
                    </div>
                </div>
                <!-- / calendar -->
            </div>
            <!-- /col-lg-3 -->
        </div>
        <!-- /row -->
    </section>
</section>
<!--main content end-->
<br />
<br />
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0/dist/Chart.min.js"></script>
<script>
    var incomPerMonth = JSON.parse('@Html.Raw(Json.Serialize(Model.IncomePerMonth))');
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Jan', 'Feb', 'March', 'Apr', 'May', 'June', 'July', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
            datasets: [{
                label: '# of Votes',
                data: incomPerMonth,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(129, 236, 236,1.0)',
                    'rgba(253, 121, 168,1.0)',
                    'rgba(214, 48, 49,1.0)',
                    'rgba(225, 112, 85,1.0)',
                    'rgba(253, 203, 110,1.0)',
                    'rgba(85, 239, 196,1.0)',
                    'rgba(45, 52, 54,1.0)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero: true
                    }
                }]
            }
        }
    });

     var incomePerWeek = JSON.parse('@Html.Raw(Json.Serialize(Model.IncomePerWeek))');
    var line = document.getElementById('myLine');
      var data = {
        labels: ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"],
        datasets: [
            {
                type: 'line',
                label: 'Basic',
                data: incomePerWeek
            }
        ]
    };

     var myNewChart = new Chart(line , {
        type: "line",
        data: data
    });
</script>

