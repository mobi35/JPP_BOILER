@model IEnumerable<Product>
@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "BackEnd";
}


<section id="main-content">
    <div class="wrapper">

        <h3><i class="fa fa-angle-right"></i> Products</h3>
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">

                    <table class="table table-striped table-bordered responsive no-wrap" style="width:100%" id="userList">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Price</th>
                                <th>Description</th>
                                <th>Action</th>
                                <th>Stocks</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                foreach (var product in Model)
                                {
                                    <tr>
                                        <td width="100px"><img  style="width:100%;" src="~/Images/@product.Image" /> </td>
                                        <td>@product.ProductName</td>
                                        <td>@product.Price</td>
                                        <td>@product.Description</td>
                                        <td><a asp-route-id="@product.ProductKey" asp-controller="Product" asp-action="Edit">Edit</a> <a return="confirm('are you sure you want to delete?')" asp-route-id="@product.ProductKey" asp-controller="Product" asp-action="Delete">Delete</a>  </td>
                                        <td>
                                            <span class="badge"> @product.Stocks</span>  <button class="btn btn-success btn-sm" onclick="MyFunction('@product.ProductKey')" data-toggle="modal" data-target="#myModal">
                                                Add Stocks
                                            </button>

                                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                            <h4 class="modal-title" id="myModalLabel">Stocks</h4>
                                                        </div>
                                                        <form asp-action="AddStocks" asp-controller="Product" method="post">
                                                            <div class="modal-body">
                                                                <h5>Add Stocks</h5>
                                                                <input type="hidden" name="id" id="productId" />
                                                                <input type="number" min="1" name="stocks" class="form-control" placeholder="Stocks">
                                                            </div>
                                                            <div class="modal-footer">
                                                                <input onclick="return confirm('are you sure you want to add this stocks ?')" type="submit" class="btn-sm btn-primary" value="Add">
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</section>
<br />
<br />
<br />
<br />

<script>


    function MyFunction(productId) {
      $('#productId').val(productId)
    }

    $(document).ready(function () {
        $('#userList').DataTable({

            responsive: true,
            lengthChange: false,
            "sScrollX": "100%",
            "scrollCollapse": true,
            dom: 'lBfrtip',
            buttons: [
                {
                    extend: 'print',

                    customize: function (win) {
                        $(win.document.body)
                            .css({ 'font-size': '10pt' })
                            .prepend(
                                '<img style= src="~/Images/activefinancelogo.png"  style="position:absolute; height:500px; z-index:5000; width:500px; top:0; left:0;" />'
                            );

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }, 'excelHtml5', {
                    extend: 'pdf',
                    download: 'open',
                }
            ]

        });
    });

</script>
