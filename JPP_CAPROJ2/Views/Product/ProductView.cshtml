@model Product
@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "Client";
}
<style>
    .cover {
  object-fit: cover;
  width: 300px;
  height: 300px;
}
</style>


<section id="main-content">
    <div class="wrapper">
        <div class="container-fliud">
            <div class="wrapper row">
                <div class="preview col-md-3">

                    <div class="preview-pic tab-content">
                        <div class="tab-pane active" id="pic-1"><img style="width:100%" src="~/Images/@Model.Image" /></div>
                    </div>
                </div>
                <div class="details col-md-6">
                    <h3 class="product-title">@Model.ProductName</h3>

                    <p class="product-description">@Model.Description</p>
                    <h4 class="price">current price: <span>@Model.Price</span></h4>



                    <div class="action">
                        <a class="add-to-cart btn btn-default" asp-action="AddToCart" asp-route-id="@Model.ProductKey" asp-controller="Cart">add to cart</a>
                        <button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
                    </div>
                </div>

            </div>
            @{
                if (Model.OtherImage1 != null)
                {
                    <div class="col-md-3">

                        <div style="width:200px;" class="tab-pane active" id="pic-1"><img class="cover"  src="~/Images/@Model.OtherImage1" /></div>

                    </div>
                }
            }
            @{
                if (Model.OtherImage2 != null)
                {
                    <div class="col-md-3">

                        <div style="width:40%;" class="tab-pane active" id="pic-1"><img class="cover"  src="~/Images/@Model.OtherImage2" /></div>

                    </div>
                }
            }

            @{
                if (Model.OtherImage3 != null)
                {
                    <div class="col-md-3">

                        <div class="tab-pane active " id="pic-1"><img class="cover" src="~/Images/@Model.OtherImage3" /></div>

                    </div>
                }
            }

            @{
                if (Model.OtherImage4 != null)
                {
                    <div class="col-md-3">

                        <div  class="tab-pane active cover" id="pic-1"><img class="cover"  src="~/Images/@Model.OtherImage4" /></div>

                    </div>
                }
            }
        </div>
                </div>
         
      

   

</section>
