@model IEnumerable<Product>
@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "Client";
}



<section id="main-content">
    <div class="wrapper">

        @{ foreach (var prod in Model)
            {

                <div class="col-lg-3 col-md-3 col-sm-3 col-xs-3">
                    <div class="custom-box">
                        <div class="servicetitle">
                                    <h4>@prod.ProductName</h4>
                            <hr>
                        </div>
                        <div class="icn-main-container">
                            <span class="icn-container">P @prod.Price</span>
                        </div>
                        <p>@prod.Description</p>
                        <ul class="pricing">
                            <li><a asp-route-id="@prod.ProductKey" asp-action="ProductView" asp-controller="Product">View Product</a></li>
                            <li></li>
                         
                        </ul>
                        <a class="btn btn-theme" asp-route-id="@prod.ProductKey" asp-action="AddToCart" asp-controller="Cart">Order Now</a>
                    </div>
                    <!-- end custombox -->
                </div>


            }
        }



</section>
