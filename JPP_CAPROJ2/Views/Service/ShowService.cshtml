@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "BackEnd";
}
@model ServiceAndQuotation

<section id="main-content">
    <section class="wrapper">

        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h1>@Model.Service.Name</h1>
                    <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#ProductModal">
                        Add Quotation
                    </button>


                


                        <table class="table table-striped table-bordered responsive no-wrap" style="width:100%;margin-top:5%;" id="userList">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var quotation in Model.Quotation)
                                    {
                                        <tr>
                                            <td>@quotation.QuotationName</td>
                                            <td>@quotation.Price</td>
                                            <td><a asp-route-id="@quotation.QuotationPK" asp-controller="Service" asp-action="UpdateQuotation">Edit</a> <a return="confirm('are you sure you want to delete?')" asp-route-id="@quotation.QuotationPK" asp-controller="Service" asp-action="DeleteQuotation">Delete</a>  </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                  


                    <div class="modal fade" id="ProductModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <form method="post" asp-action="CreateNewQuotation" asp-controller="Service">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title" id="myModalLabel">Add new quotation</h4>
                                    </div>
                                    <div class="modal-body">

                                   

                                        <input type="text" name="id" value="@Model.Service.ServiceId" />

                                        <input type="text" name="name" />
                                        <input type="text" name="price" />
                                    </div>
                                    <div class="modal-footer">
                                        <input type="submit" value="Submit" />
                                    </div>
                            </form>

                        </div>
                    </div>
                </div>
                </div>
            </div>
    </section>
</section>


<script>


    if ($('.validation').text().trim() == "") {
        $('.validation').hide();
    }



</script>



<script>
    $(document).ready(function () {
        $('#userList').DataTable({

            responsive: true,
            lengthChange: false,
            "sScrollX": "100%",
            "scrollCollapse": true,
            dom: 'lBfrtip',
            buttons: [
                {
                    extend: 'print',

                    customize: function (win) {
                        $(win.document.body)
                            .css({ 'font-size': '10pt' })
                            .prepend(
                                '<img style= src="~/Images/activefinancelogo.png"  style="position:absolute; height:500px; z-index:5000; width:500px; top:0; left:0;" />'
                            );

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }, 'excelHtml5', {
                    extend: 'pdf',
                    download: 'open',
                }
            ]

        });
    });

</script>
