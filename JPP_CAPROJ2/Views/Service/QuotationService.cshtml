@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "Client";
}

@model RequestService
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.1/css/bootstrap-datepicker.min.css" rel="stylesheet" />
<section id="main-content">
    <div class="wrapper">

        <div class="row mt">

            <div class="col-lg-12">

                <div class="form-panel">

                    @{


                     
                            <div class="form">
                                <div class="alert alert-danger validation" asp-validation-summary="All"></div>

                                <form class="cmxform form-horizontal style-form" id="signupForm" asp-action="Create" asp-controller="Request" method="post">
                                    <div class="form-group ">
                                        <div class="col-lg-10">
                                            <h1>@Model.Service.Name</h1>
                                            <p>Price : @Model.Service.Price</p>
                                        </div>

                                    </div>

                                    <input type="hidden" name="serviceType" value="@Model.Service.Name" />

                                    <input type="hidden" name="serviceId" value="@Model.Service.ServiceId" />
                                    <div class="form-group ">
                                        <label for="password" class="control-label col-lg-2">Problems</label>
                                        <div class="col-lg-10">
                                            <textarea class="form-control" rows="10" asp-for="@Model.Request.Description"> </textarea>
                                        </div>
                                    </div>
                                    <input type="hidden" asp-for="@Model.Request.Price" value="@Model.Service.Price" />
                                    <div class="form-group ">
                                        <label for="password" class="control-label col-lg-2">Available appointment date</label>
                                        <div class="col-lg-10">



                                            <div class="input-group date" data-date-format="yyyy/mm/dd">
                                                <input asp-for="@Model.Request.AvailableDate" type="text" class="form-control" placeholder="dd.mm.yyyy">
                                                <div class="input-group-addon">
                                                    <span class="glyphicon glyphicon-th"></span>
                                                </div>
                                            </div>


                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-lg-offset-2 col-lg-10">
                                            <button class="btn btn-theme" type="submit">Save</button>
                                            <button class="btn btn-theme04" type="button">Cancel</button>
                                        </div>
                                    </div>


                                </form>
                            </div>
                       
                    }


                </div>
                <!-- /form-panel -->
            </div>
            <!-- /col-lg-12 -->
        </div>
    </div>
</section>
<script>

    $(document).ready(function () {
        
        var date = new Date();
        var endDate = new Date();
        date.setDate(date.getDate() +1);
        endDate.setDate(endDate.getDate() +60)
        $('.input-group.date').datepicker({ format: "yyyy-mm-dd",numberOfMonths : 3, startDate:date, endDate:endDate,  daysOfWeekDisabled: [0]  });

    });

</script>
<script>

    if ($('.validation').text().trim() == "") {
        $('.validation').hide();
    }




</script>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.1/js/bootstrap-datepicker.min.js"></script>


