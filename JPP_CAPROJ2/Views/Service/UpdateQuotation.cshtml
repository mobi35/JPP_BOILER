@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "BackEnd";
}
@model Quotations

<section id="main-content">
    <section class="wrapper">



                <form method="post" asp-action="UpdateQuotation" asp-controller="Service">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Worker List</h4>
                        </div>
                        <div class="modal-body">

                            <h5>Add New Quotation</h5>

                            <input type="text" asp-for="QuotationPK" />
                            <input type="text" asp-for="ServiceID" />

                            <input type="text" asp-for="QuotationName" />
                            <input type="text" asp-for="Price" />

                        </div>
                        <div class="modal-footer">
                            <input type="submit" value="Update" />
                        </div>
                </form>

    </section>
</section>


<script>


    if ($('.validation').text().trim() == "") {
        $('.validation').hide();
    }



</script>



<script>
    $(document).ready(function () {
        $('#userList').DataTable({

            responsive: true,
            lengthChange: false,
            "sScrollX": "100%",
            "scrollCollapse": true,
            dom: 'lBfrtip',
            buttons: [
                {
                    extend: 'print',

                    customize: function (win) {
                        $(win.document.body)
                            .css({ 'font-size': '10pt' })
                            .prepend(
                                '<img style= src="~/Images/activefinancelogo.png"  style="position:absolute; height:500px; z-index:5000; width:500px; top:0; left:0;" />'
                            );

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }, 'excelHtml5', {
                    extend: 'pdf',
                    download: 'open',
                }
            ]

        });
    });

</script>
